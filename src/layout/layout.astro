---
import '@fontsource/poppins'
import '@fontsource/space-mono'
import Header from '../components/header/Header.astro'
import Particles from '@components/space/Particles.svelte'
interface Props {
	title: String
}
const { title } = Astro.props
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<title>{title}</title>
	</head>
	<body class="bg-dark_slate_gray-900 text-apricot-200">
		<Header />
		<main class="container mx-auto mt-16 min-h-[calc(100dvh-80px)] bg-dark_slate_gray-900">
			<slot />
		</main>
		<Particles client:load />
	</body>
</html>
