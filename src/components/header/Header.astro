---
import { Image } from 'astro:assets'
import Menu from './Menu.svelte'

interface Props {
	trasparent: boolean
}
const { trasparent } = Astro.props
---

<header class={`fixed top-0 w-full ${trasparent ? 'bg-transparent' : 'bg-dark_slate_gray-900'}`}>
	<div class="container mx-auto w-full">
		<div class="flex w-full flex-wrap items-center justify-between py-7">
			<a class="z-10 basis-1/3 px-7 sm:px-0" href="/">
				<Image
					height={48}
					width={387}
					src="/logo_desktop.svg"
					class="h-7"
					alt="logo"
					format="webp"
					srcset={'/logo_mobile.svg 640w, /logo_desktop.svg'}
				/>
			</a>
			<Menu client:load />
		</div>
	</div>
</header>
