---
import { Picture } from 'astro:assets'
import Menu from './Menu.svelte'

interface Props {
	trasparent?: boolean
}
const { trasparent } = Astro.props
---

<header class={`fixed top-0 w-full ${trasparent ? 'bg-transparent' : 'bg-dark_slate_gray-900'}`}>
	<div class="container mx-auto w-full">
		<div class="flex w-full flex-wrap items-center justify-between py-7">
			<a class="felx z-10 basis-1/3 px-7 sm:px-0" href="/">
				<img src="/logo_desktop.svg" class="hidden h-7 sm:block" alt="logo" />
				<img src="/logo_mobile.svg" class="block h-7 sm:hidden" alt="logo" />
			</a>
			<Menu client:load />
		</div>
	</div>
</header>
